include ../partials/mixins/mixins

block vars
  - var bodyClass = ''
  - var footerClass = ''
  - var headerClass = ''
  - var pageTitle = ''
  - var dir = ''
  - var images = '/images/'

doctype html
html(lang='ru-RU')
  head
    meta(charset='UTF-8')
    meta(name='format-detection', content='telephone=no')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{pageTitle}
    block styles
    meta(name='description' content='')
    meta(property='og:image', content='images/favicon/og-image.jpg')
    meta(property='og:image:width', content='279')
    meta(property='og:image:height', content='279')
    meta(property='og:title', content='barrier')
    meta(property='og:description', content='barrier')
    meta(property='og:url', content='https://barrier.ru')

    link(rel='apple-touch-icon', sizes='76x76', href='images/favicon/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='images/favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='images/favicon/favicon-16x16.png')
    //link(rel='manifest', href='images/favicon/site.webmanifest')
    link(rel='mask-icon', href='images/favicon/safari-pinned-tab.svg', color='#5bbad5')
    link(rel='shortcut icon' href='images/favicon/favicon.png' type='image/png')
    meta(name='msapplication-TileColor', content='#2d89ef')
    meta(name='theme-color', content='#ffffff')

    link(rel='stylesheet', href= dir + 'css/styles.min.css?v0.1')
  body(class=bodyClass)
    .wrapper
      header.header
        .box
          .header__inner
            .header__logo
              a(href="#").logo
                img(srcset='images/images/logo.jpg 1x, images/images/logo@2x.jpg 2x' width=208 height=84 alt='Logo')
            nav.header__nav.nav
              ul.nav__list
                li.nav__item
                  a(href="#").nav__link О проблеме
                li.nav__item
                  a(href="#").nav__link Решение
                li.nav__item
                  a(href="#").nav__link Пункты приема
                li.nav__item
                  a(href="#").nav__link Переработка
                li.nav__item
                  a(href="#").nav__link Статьи
      main.main
        block main
      footer.footer
        .box
          .footer__inner
    block script
    script(src="js/vendor/jquery-3.2.1.min.js")
    script(src="js/vendor/slick.js")
    script(src="js/app.min.js?v0.1")
